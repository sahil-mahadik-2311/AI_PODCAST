{
    "version": 2,
    "buildCommand": "cd 'frontend (2)/frontend' && npm install && npm run build",
    "outputDirectory": "frontend (2)/frontend/build",
    "framework": null,
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "https://your-backend-url.onrender.com/api/:path*"
        },
        {
            "source": "/audio/:path*",
            "destination": "https://your-backend-url.onrender.com/audio/:path*"
        }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-XSS-Protection",
                    "value": "1; mode=block"
                }
            ]
        }
    ]
}